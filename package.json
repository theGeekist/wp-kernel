{
	"name": "wp-kernel",
	"version": "0.10.0",
	"private": true,
	"type": "module",
	"description": "A Rails-like, opinionated framework for building modern WordPress products",
	"license": "EUPL-1.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/theGeekist/wp-kernel.git"
	},
	"packageManager": "pnpm@10.19.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"scripts": {
		"prepare": "husky || true",
		"dev": "pnpm --filter './packages/*' --parallel run dev",
		"build": "pnpm --recursive --filter './packages/*' --filter './examples/*' run build",
		"build:packages": "pnpm --recursive --filter './packages/*' run build",
		"clean": "pnpm --recursive run clean && rm -rf node_modules",
		"clean:dist": "pnpm --recursive run clean",
		"lint": "pnpm run lint:peers && eslint --max-warnings=0 --cache --cache-location node_modules/.cache/eslint --cache-strategy=content --report-unused-disable-directives packages/ examples/",
		"lint:fix": "eslint --cache --cache-location node_modules/.cache/eslint --cache-strategy=content --fix packages/ examples/",
		"lint:branching": "eslint --rulesdir ./eslint-rules --rule 'no-else-return:error' packages/ examples/",
		"lint:peers": "pnpm exec tsx scripts/check-framework-peers.ts",
		"release:bump": "pnpm exec tsx scripts/release/bump-version.ts",
		"release:prepare-pr": "pnpm exec tsx scripts/release/prepare-pr.ts",
		"release:verify": "pnpm exec tsx scripts/check-release-readiness.ts",
		"format": "prettier --write '**/*.{js,ts,tsx,json,md,yml,yaml}' && node scripts/normalize-punctuation.js",
		"format:check": "prettier --check '**/*.{js,ts,tsx,json,md,yml,yaml}'",
		"typecheck": "pnpm --recursive --filter './packages/*' --filter './examples/*' run typecheck",
		"typecheck:tests": "pnpm --recursive --filter './packages/*' --filter './examples/*' run typecheck:tests",
		"monorepo:create": "pnpm exec tsx scripts/register-workspace.ts create",
		"monorepo:update": "pnpm exec tsx scripts/register-workspace.ts update",
		"monorepo:remove": "pnpm exec tsx scripts/register-workspace.ts remove",
		"test": "wpk-run-jest",
		"test:watch": "wpk-run-jest --watch",
		"test:coverage": "wpk-run-jest coverage",
		"test:integration": "wpk-run-jest integration",
		"wp:start": "pnpm wp:fresh",
		"wp:stop": "wp-env stop",
		"wp:restart": "pnpm wp:stop && pnpm wp:start",
		"wp:destroy": "wp-env destroy",
		"wp:clean": "pnpm wp:destroy && rm -rf .wp-env",
		"wp:cli": "wp-env run cli",
		"wp:logs": "wp-env logs",
		"wp:logs:php": "wp-env logs wordpress",
		"wp:seed": "wp-env run tests-cli bash /var/www/html/wp-content/plugins/showcase/seeds/seed-all.sh",
		"wp:seed:reset": "wp-env run tests-cli wp db reset --yes && wp-env run tests-cli bash /var/www/html/wp-content/plugins/showcase/seeds/seed-all.sh",
		"wp:fresh": "wp-env start && pnpm wp:seed",
		"e2e": "playwright test",
		"e2e:headed": "playwright test --headed --workers=1 ",
		"e2e:ui": "playwright test --ui --workers=1 ",
		"e2e:debug": "playwright test --debug --workers=1 ",
		"e2e:playground": "TEST_ENV=playground WP_BASE_URL=http://127.0.0.1:9400 WP_USERNAME=admin WP_PASSWORD=password playwright test --workers=1 ",
		"e2e:playground:headed": "TEST_ENV=playground WP_BASE_URL=http://127.0.0.1:9400 WP_USERNAME=admin WP_PASSWORD=password playwright test --headed --workers=1 ",
		"e2e:playground:ui": "TEST_ENV=playground WP_BASE_URL=http://127.0.0.1:9400 WP_USERNAME=admin WP_PASSWORD=password playwright test --ui --workers=1 ",
		"e2e:playground:debug": "TEST_ENV=playground WP_BASE_URL=http://127.0.0.1:9400 WP_USERNAME=admin WP_PASSWORD=password playwright test --debug --workers=1 ",
		"playground": "wp-playground-cli server --blueprint=./test-harness/playground/blueprint.json --mount=./examples/showcase:/wordpress/wp-content/plugins/showcase-plugin --port=9400",
		"docs:api": "pnpm exec tsx scripts/docs/build-api.ts",
		"playground:setup": "bash scripts/offline-playground-setup.sh",
		"playground:offline:start": "bash scripts/start-playground-offline.sh",
		"playground:offline:stop": "bash scripts/stop-playground-offline.sh",
		"playground:offline": "bash scripts/start-playground-offline.sh",
		"docs:site": "vitepress build docs",
		"docs:site:fast": "DOCS_FAST=1 vitepress build docs",
		"docs:dev": "vitepress dev docs",
		"docs:build": "pnpm docs:api && pnpm docs:site",
		"docs:build:fast": "pnpm docs:api && pnpm docs:site:fast",
		"docs:preview": "vitepress preview docs",
		"preinstall": "npx only-allow pnpm",
		"refresh": "pnpm i && pnpm build && pnpm docs:build && pnpm lint --fix && pnpm format && git add --all"
	},
	"devDependencies": {
		"@braintree/sanitize-url": "^7.1.1",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.37.0",
		"@kucrut/vite-for-wp": "^0.12.0",
		"@playwright/test": "^1.56.0",
		"@prettier/plugin-php": "^0.24.0",
		"@red-asuka/vitepress-plugin-tabs": "^0.0.4",
		"@rollup/plugin-node-resolve": "^16.0.3",
		"@testing-library/react": "^16.3.0",
		"@types/jest": "^30.0.0",
		"@types/jscodeshift": "^17.3.0",
		"@types/node": "^24.7.2",
		"@types/react": "^18.3.26",
		"@types/react-dom": "^18.3.7",
		"@typescript-eslint/eslint-plugin": "^8.46.1",
		"@typescript-eslint/parser": "^8.46.1",
		"@wordpress/api-fetch": "^7.32.0",
		"@wordpress/components": "^30.5.0",
		"@wordpress/data": "^10.32.0",
		"@wordpress/dataviews": "^9.1.0",
		"@wordpress/deprecated": "^4.32.0",
		"@wordpress/dom-ready": "^4.32.0",
		"@wordpress/e2e-test-utils-playwright": "^1.32.0",
		"@wordpress/element": "^6.32.0",
		"@wordpress/env": "^10.32.0",
		"@wordpress/eslint-plugin": "^22.18.0",
		"@wordpress/hooks": "^4.32.0",
		"@wordpress/i18n": "^6.5.0",
		"@wordpress/interactivity": "^6.34.0",
		"@wordpress/jest-preset-default": "^12.32.0",
		"@wordpress/prettier-config": "^4.32.0",
		"@wordpress/scripts": "^30.25.0",
		"@wp-playground/cli": "^3.0.12",
		"@wpkernel/scripts": "workspace:*",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"cytoscape": "^3.33.1",
		"cytoscape-cose-bilkent": "^4.1.0",
		"dayjs": "^1.11.18",
		"debug": "^4.4.3",
		"eslint": "^9.37.0",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-early-return": "^0.0.6",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-unicorn": "^61.0.2",
		"glob": "^10.4.5",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"jscodeshift": "^17.3.0",
		"json-schema-to-typescript": "^15.0.4",
		"jsonc-parser": "^3.3.1",
		"lint-staged": "^16.2.4",
		"loglayer": "^6.9.1",
		"mermaid": "^11.12.0",
		"prettier": "^3.6.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"recast": "^0.23.11",
		"rollup-plugin-external-globals": "^0.13.0",
		"ts-jest": "^29.4.5",
		"ts-morph": "^27.0.2",
		"tsx": "^4.20.6",
		"typedoc": "^0.28.14",
		"typedoc-plugin-markdown": "^4.9.0",
		"typescript": "^5.9.3",
		"vite": "^7.1.9",
		"vite-plugin-dts": "^4.5.4",
		"vite-plugin-external": "^6.2.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitepress": "^1.6.4",
		"vitepress-plugin-mermaid": "^2.0.17",
		"vue3-tabs-component": "^1.3.7"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --write"
		],
		"*.md": [
			"node scripts/normalize-punctuation.js"
		]
	},
	"pnpm": {
		"overrides": {
			"@babel/runtime": ">=7.26.10",
			"webpack-dev-server": ">=5.2.1",
			"eslint": "^9.36.0",
			"eslint-plugin-jest": "^29.0.1",
			"eslint-plugin-react-hooks": "^5.1.0",
			"@typescript-eslint/eslint-plugin": "^8.45.0",
			"@typescript-eslint/parser": "^8.45.0",
			"@typescript-eslint/utils": "^8.45.0",
			"test-exclude": "^7.0.1",
			"jsdom": "^27.0.0",
			"markdownlint-cli": "^0.45.0",
			"npm-packlist": "^10.0.2",
			"source-map-loader": "^5.0.0",
			"glob": "^10.4.5",
			"react": "^18.3.1",
			"react-dom": "^18.3.1"
		}
	},
	"prettier": "@wordpress/prettier-config"
}

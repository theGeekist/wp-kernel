{
	"name": "wp-kernel",
	"version": "0.1.1",
	"private": true,
	"type": "module",
	"description": "A Rails-like, opinionated framework for building modern WordPress products",
	"license": "EUPL-1.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/theGeekist/wp-kernel.git"
	},
	"packageManager": "pnpm@10.17.1",
	"engines": {
		"node": ">=22.20.0",
		"pnpm": ">=9.0.0"
	},
	"scripts": {
		"prepare": "husky || true",
		"dev": "pnpm --filter './packages/*' --parallel run dev",
		"build": "pnpm --recursive --filter './packages/*' --filter './app/*' run build",
		"build:packages": "pnpm --recursive --filter './packages/*' run build",
		"clean": "pnpm --recursive run clean && rm -rf node_modules",
		"clean:dist": "pnpm --recursive run clean",
		"lint": "eslint packages/ app/",
		"lint:fix": "eslint packages/ app/ --fix",
		"format": "prettier --write '**/*.{js,ts,tsx,json,md,yml,yaml}' && node scripts/normalize-punctuation.js",
		"format:check": "prettier --check '**/*.{js,ts,tsx,json,md,yml,yaml}'",
		"typecheck": "pnpm --recursive --filter './packages/*' --filter './app/*' run typecheck",
		"typecheck:tests": "pnpm --recursive --filter './packages/*' --filter './app/*' run typecheck:tests",
		"types:build": "tsc -b packages/*/tsconfig.build.json",
		"types:clean": "tsc -b packages/*/tsconfig.build.json --clean",
		"test": "jest --passWithNoTests",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"wp:start": "pnpm wp:fresh",
		"wp:stop": "wp-env stop",
		"wp:restart": "pnpm wp:stop && pnpm wp:start",
		"wp:destroy": "wp-env destroy",
		"wp:clean": "pnpm wp:destroy && rm -rf .wp-env",
		"wp:cli": "wp-env run cli",
		"wp:logs": "wp-env logs",
		"wp:logs:php": "wp-env logs wordpress",
		"wp:seed": "wp-env run tests-cli bash /var/www/html/wp-content/plugins/showcase/seeds/seed-all.sh",
		"wp:seed:reset": "wp-env run tests-cli wp db reset --yes && wp-env run tests-cli bash /var/www/html/wp-content/plugins/showcase/seeds/seed-all.sh",
		"wp:fresh": "wp-env start && pnpm wp:seed",
		"e2e": "playwright test",
		"e2e:headed": "playwright test --headed --workers=1 ",
		"e2e:ui": "playwright test --ui --workers=1 ",
		"e2e:debug": "playwright test --debug --workers=1 ",
		"e2e:playground": "TEST_ENV=playground WP_BASE_URL=http://127.0.0.1:9400 WP_USERNAME=admin WP_PASSWORD=password playwright test --workers=1 ",
		"e2e:playground:headed": "TEST_ENV=playground WP_BASE_URL=http://127.0.0.1:9400 WP_USERNAME=admin WP_PASSWORD=password playwright test --headed --workers=1 ",
		"e2e:playground:ui": "TEST_ENV=playground WP_BASE_URL=http://127.0.0.1:9400 WP_USERNAME=admin WP_PASSWORD=password playwright test --ui --workers=1 ",
		"e2e:playground:debug": "TEST_ENV=playground WP_BASE_URL=http://127.0.0.1:9400 WP_USERNAME=admin WP_PASSWORD=password playwright test --debug --workers=1 ",
		"playground": "wp-playground-cli server --blueprint=./test-harness/playground/blueprint.json --mount=./app/showcase:/wordpress/wp-content/plugins/showcase-plugin --port=9400",
		"docs:api": "typedoc",
		"docs:site": "vitepress build docs",
		"docs:site:fast": "DOCS_FAST=1 vitepress build docs",
		"docs:dev": "vitepress dev docs",
		"docs:build": "pnpm docs:api && pnpm docs:site",
		"docs:build:fast": "pnpm docs:api && pnpm docs:site:fast",
		"docs:preview": "vitepress preview docs",
		"changeset": "changeset",
		"changeset:version": "changeset version",
		"changeset:publish": "pnpm build && changeset publish",
		"preinstall": "npx only-allow pnpm"
	},
	"devDependencies": {
		"@braintree/sanitize-url": "^7.1.1",
		"@changesets/cli": "^2.29.7",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.36.0",
		"@kucrut/vite-for-wp": "^0.12.0",
		"@playwright/test": "^1.55.1",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.6.0",
		"@types/react": "^18.3.0",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"@wordpress/api-fetch": "^7.31.0",
		"@wordpress/components": "^30.4.0",
		"@wordpress/data": "^10.31.0",
		"@wordpress/dom-ready": "^4.31.0",
		"@wordpress/e2e-test-utils-playwright": "^1.31.0",
		"@wordpress/element": "^6.31.0",
		"@wordpress/env": "^10.31.0",
		"@wordpress/eslint-plugin": "^22.17.0",
		"@wordpress/hooks": "^4.31.0",
		"@wordpress/i18n": "^6.4.0",
		"@wordpress/jest-preset-default": "^12.31.0",
		"@wordpress/prettier-config": "^4.31.0",
		"@wordpress/scripts": "^30.24.0",
		"@wp-playground/cli": "^3.0.6",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"commander": "^12.1.0",
		"cytoscape": "^3.33.1",
		"cytoscape-cose-bilkent": "^4.1.0",
		"dayjs": "^1.11.18",
		"debug": "^4.4.3",
		"eslint": "^9.36.0",
		"eslint-import-resolver-typescript": "^4.4.4",
		"glob": "^10.4.5",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"json-schema-to-typescript": "^15.0.4",
		"lint-staged": "^16.2.3",
		"loglayer": "^6.7.2",
		"mermaid": "^11.12.0",
		"prettier": "^3.6.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"rollup-plugin-external-globals": "^0.13.0",
		"ts-jest": "^29.4.4",
		"typedoc": "^0.28.13",
		"typedoc-plugin-markdown": "^4.9.0",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-plugin-dts": "^4.5.4",
		"vite-plugin-external": "^6.2.2",
		"vitepress": "^1.6.4",
		"vitepress-plugin-mermaid": "^2.0.17"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --write"
		],
		"*.md": [
			"node scripts/normalize-punctuation.js"
		]
	},
	"pnpm": {
		"overrides": {
			"@babel/runtime": ">=7.26.10",
			"webpack-dev-server": ">=5.2.1",
			"eslint": "^9.36.0",
			"eslint-plugin-jest": "^29.0.1",
			"eslint-plugin-react-hooks": "^5.1.0",
			"@typescript-eslint/eslint-plugin": "^8.45.0",
			"@typescript-eslint/parser": "^8.45.0",
			"@typescript-eslint/utils": "^8.45.0",
			"test-exclude": "^7.0.1",
			"jsdom": "^27.0.0",
			"markdownlint-cli": "^0.45.0",
			"npm-packlist": "^10.0.2",
			"source-map-loader": "^5.0.0",
			"glob": "^10.4.5",
			"react": "^18.3.1",
			"react-dom": "^18.3.1"
		}
	},
	"prettier": "@wordpress/prettier-config"
}

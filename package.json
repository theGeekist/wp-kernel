{
	"name": "wp-kernel",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"description": "A Rails-like, opinionated framework for building modern WordPress products",
	"license": "EUPL-1.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/theGeekist/wp-kernel.git"
	},
	"packageManager": "pnpm@9.12.3",
	"engines": {
		"node": ">=22.20.0",
		"pnpm": ">=9.0.0"
	},
	"scripts": {
		"dev": "pnpm --filter './packages/*' --parallel run dev",
		"build": "pnpm --recursive --filter './packages/*' --filter './examples/*' run build",
		"build:packages": "pnpm --recursive --filter './packages/*' run build",
		"build:examples": "pnpm --filter './examples/*' run build",
		"clean": "pnpm --recursive run clean && rm -rf node_modules",
		"clean:dist": "pnpm --recursive run clean",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write '**/*.{js,ts,tsx,json,md,yml,yaml}'",
		"format:check": "prettier --check '**/*.{js,ts,tsx,json,md,yml,yaml}'",
		"typecheck": "pnpm --recursive --filter './packages/*' run typecheck",
		"test": "jest --passWithNoTests",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"wp:start": "wp-env start",
		"wp:stop": "wp-env stop",
		"wp:restart": "pnpm wp:stop && pnpm wp:start",
		"wp:destroy": "wp-env destroy",
		"wp:clean": "pnpm wp:destroy && rm -rf .wp-env",
		"wp:cli": "wp-env run cli",
		"wp:logs": "wp-env logs",
		"wp:logs:php": "wp-env logs wordpress",
		"wp:seed": "wp-env run tests-cli bash /var/www/html/wp-content/plugins/showcase-plugin/seeds/seed-all.sh",
		"wp:seed:reset": "wp-env run tests-cli wp db reset --yes && wp-env run tests-cli bash /var/www/html/wp-content/plugins/showcase-plugin/seeds/seed-all.sh",
		"wp:fresh": "pnpm wp:start && pnpm wp:seed",
		"e2e": "playwright test",
		"e2e:headed": "playwright test --headed",
		"e2e:ui": "playwright test --ui",
		"e2e:debug": "playwright test --debug",
		"playground": "wp-playground-cli server --blueprint=./test-harness/playground/blueprint.json --mount=./examples/showcase-plugin:/wordpress/wp-content/plugins/showcase-plugin --port=9400",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs",
		"changeset": "changeset",
		"changeset:version": "changeset version",
		"changeset:publish": "pnpm build && changeset publish",
		"preinstall": "npx only-allow pnpm"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.36.0",
		"@playwright/test": "^1.55.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.6.0",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"@wordpress/e2e-test-utils-playwright": "^1.31.0",
		"@wordpress/env": "^10.31.0",
		"@wordpress/eslint-plugin": "^22.17.0",
		"@wordpress/jest-preset-default": "^12.31.0",
		"@wordpress/prettier-config": "^4.31.0",
		"@wordpress/scripts": "^30.24.0",
		"@wp-playground/cli": "^3.0.6",
		"eslint": "^9.36.0",
		"globals": "^16.4.0",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"prettier": "^3.6.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"ts-jest": "^29.4.4",
		"typescript": "^5.9.2",
		"vitepress": "^1.6.4"
	},
	"pnpm": {
		"overrides": {
			"@babel/runtime": ">=7.26.10",
			"webpack-dev-server": ">=5.2.1",
			"eslint": "^9.36.0",
			"eslint-plugin-jest": "^29.0.1",
			"eslint-plugin-react-hooks": "^5.1.0",
			"@typescript-eslint/eslint-plugin": "^8.45.0",
			"@typescript-eslint/parser": "^8.45.0",
			"@typescript-eslint/utils": "^8.45.0",
			"test-exclude": "^7.0.1",
			"jsdom": "^27.0.0",
			"markdownlint-cli": "^0.45.0",
			"npm-packlist": "^10.0.2",
			"source-map-loader": "^5.0.0",
			"glob": "^10.4.5",
			"react": "^18.3.1",
			"react-dom": "^18.3.1"
		}
	},
	"prettier": "@wordpress/prettier-config"
}

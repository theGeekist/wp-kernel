{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"composite": false,
		"rootDir": ".",
		"outDir": "./dist",
		"noEmit": true
	},
	"include": [
		"packages/core/src/**/*",
		"packages/ui/src/**/*",
		"packages/cli/src/**/*",
		"packages/test-utils/src/**/*",
		"types/**/*.d.ts"
	]
}

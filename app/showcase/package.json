{
	"name": "wp-kernel-showcase",
	"version": "0.2.0",
	"private": true,
	"description": "Showcase plugin demonstrating WP Kernel framework features",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "pnpm types:generate && vite build",
		"types:generate": "./scripts/generate-types.sh",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf build types"
	},
	"dependencies": {
		"@geekist/wp-kernel": "workspace:*",
		"@geekist/wp-kernel-ui": "workspace:*"
	},
	"devDependencies": {
		"@kucrut/vite-for-wp": "^0.12.0",
		"@playwright/test": "^1.55.1",
		"@types/node": "^22.10.6",
		"@wordpress/api-fetch": "^7.31.0",
		"@wordpress/components": "^30.4.0",
		"@wordpress/data": "^10.31.0",
		"@wordpress/dom-ready": "^4.31.0",
		"@wordpress/element": "^6.31.0",
		"@wordpress/hooks": "^4.31.0",
		"@wordpress/i18n": "^6.4.0",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"vite": "^7.1.7"
	}
}

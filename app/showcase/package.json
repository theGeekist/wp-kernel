{
	"name": "wp-kernel-showcase",
	"version": "0.2.0",
	"private": true,
	"description": "Showcase plugin demonstrating WP Kernel framework features",
	"type": "module",
	"scripts": {
		"dev": "wp-scripts start src/index.ts --output-path=build",
		"build": "pnpm types:generate && wp-scripts build src/index.ts --output-path=build",
		"types:generate": "./scripts/generate-types.sh",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf build types"
	},
	"dependencies": {
		"@geekist/wp-kernel": "workspace:*",
		"@geekist/wp-kernel-ui": "workspace:*"
	},
	"devDependencies": {
		"@wordpress/scripts": "^30.24.0",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1"
	}
}

{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"composite": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"types": ["@wordpress/element"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"],
	"references": [
		{ "path": "../../packages/kernel" },
		{ "path": "../../packages/ui" }
	]
}

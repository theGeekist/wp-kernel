{
	"name": "@wpkernel/e2e-utils",
	"version": "0.7.0",
	"description": "E2E testing utilities for WP Kernel projects",
	"license": "EUPL-1.2",
	"type": "module",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/theGeekist/wp-kernel.git",
		"directory": "packages/e2e-utils"
	},
	"homepage": "https://github.com/theGeekist/wp-kernel#readme",
	"bugs": {
		"url": "https://github.com/theGeekist/wp-kernel/issues"
	},
	"keywords": [
		"wordpress",
		"testing",
		"e2e",
		"playwright",
		"wp-kernel"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./createKernelUtils": {
			"types": "./dist/createKernelUtils.d.ts",
			"import": "./dist/createKernelUtils.js",
			"default": "./dist/createKernelUtils.js"
		},
		"./helpers": {
			"types": "./dist/createKernelUtils.d.ts",
			"import": "./dist/createKernelUtils.js",
			"default": "./dist/createKernelUtils.js"
		},
		"./test-support/isolated-workspace": {
			"types": "./dist/test-support/isolated-workspace.test-support.d.ts",
			"import": "./dist/test-support/isolated-workspace.test-support.js",
			"default": "./dist/test-support/isolated-workspace.test-support.js"
		},
		"./test-support/cli-runner": {
			"types": "./dist/test-support/cli-runner.test-support.d.ts",
			"import": "./dist/test-support/cli-runner.test-support.js",
			"default": "./dist/test-support/cli-runner.test-support.js"
		},
		"./types": {
			"types": "./dist/types.d.ts",
			"default": "./dist/types.d.ts"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "tsc --build --watch",
		"build": "vite build && tsc --noEmit",
		"clean": "rm -rf dist *.tsbuildinfo",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"format": "prettier --write 'src/**/*.{js,ts,tsx,json,md}'",
		"format:check": "prettier --check 'src/**/*.{js,ts,tsx,json,md}'",
		"typecheck": "tsc --noEmit",
		"typecheck:tests": "tsc --project tsconfig.tests.json --noEmit",
		"test": "jest --passWithNoTests --watchman=false",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --watchman=false"
	},
	"dependencies": {
		"@wpkernel/test-utils": "workspace:*"
	},
	"peerDependencies": {
		"@wpkernel/core": "workspace:*",
		"@playwright/test": ">=1.40.0",
		"@wordpress/e2e-test-utils-playwright": ">=1.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}

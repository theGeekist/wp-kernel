{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"composite": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": false,
		"incremental": true,
		"tsBuildInfoFile": ".tsbuildinfo"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}

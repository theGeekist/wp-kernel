{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.lib.json",
	"compilerOptions": {
		"baseUrl": "../..",
		"rootDir": "./src",
		"outDir": "./dist",
		"composite": true,
		"types": ["node"],
		"moduleResolution": "node",
		"module": "ESNext",
		"paths": {
			"@wpkernel/core": ["packages/core/dist/index.d.ts"],
			"@wpkernel/core/*": ["packages/core/dist/*"],
			"@wpkernel/cli": ["packages/cli/dist/index.d.ts"],
			"@wpkernel/cli/*": ["packages/cli/dist/*"],
			"@wpkernel/pipeline": ["packages/pipeline/dist/index.d.ts"],
			"@wpkernel/pipeline/*": ["packages/pipeline/dist/*"],
			"@wpkernel/php-json-ast": ["packages/php-json-ast/dist/index.d.ts"],
			"@wpkernel/php-json-ast/*": ["packages/php-json-ast/dist/*"],
			"@wpkernel/ui": ["packages/ui/dist/index.d.ts"],
			"@wpkernel/ui/*": ["packages/ui/dist/*"],
			"@wpkernel/wp-json-ast": ["packages/wp-json-ast/dist/index.d.ts"],
			"@wpkernel/wp-json-ast/*": ["packages/wp-json-ast/dist/*"],
			"@wpkernel/test-utils": ["packages/test-utils/dist/index.d.ts"],
			"@wpkernel/test-utils/*": ["packages/test-utils/dist/*"]
		}
	},
	"include": ["src/**/*", "../../types/**/*.d.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}

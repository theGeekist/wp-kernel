{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"jsxImportSource": "@wordpress/element",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"baseUrl": "../../",
		"paths": {
			"@wpkernel/core": ["packages/core/src/index.ts"],
			"@wpkernel/core/*": ["packages/core/src/*"],
			"@wpkernel/ui": ["packages/ui/src/index.ts"],
			"@wpkernel/ui/*": ["packages/ui/src/*"],
			"@wpkernel/cli": ["packages/cli/src/index.ts"],
			"@wpkernel/cli/*": ["packages/cli/src/*"],
			"@wpkernel/e2e-utils": ["packages/e2e-utils/src/index.ts"],
			"@wpkernel/e2e-utils/*": ["packages/e2e-utils/src/*"],
			"@wpkernel/test-utils": ["packages/test-utils/src/index.ts"],
			"@wpkernel/test-utils/*": ["packages/test-utils/src/*"],
			"@wpkernel/php-json-ast": [
				"packages/php-json-ast/src/index.ts",
				"packages/php-json-ast/dist/index.d.ts"
			],
			"@wpkernel/php-json-ast/*": [
				"packages/php-json-ast/src/*",
				"packages/php-json-ast/dist/*"
			],
			"@wpkernel/php-driver": ["packages/php-driver/src/index.ts"],
			"@wpkernel/php-driver/*": ["packages/php-driver/src/*"],
			"@test-utils/*": ["tests/test-utils/*"]
		},
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"allowUnusedLabels": false,
		"allowUnreachableCode": false,
		"declaration": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"types": ["jest", "node"],
		"typeRoots": ["../../node_modules/@types", "../../types"],
		"resolvePackageJsonExports": true,
		"resolvePackageJsonImports": true
	},
	"include": [
		"src/config/__tests__/**/*.ts",
		"src/config/__tests__/**/*.tsx",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"vite.config.ts"
	],
	"references": [
		{ "path": "./tsconfig.json" },
		{ "path": "../core/tsconfig.json" },
		{ "path": "../php-json-ast/tsconfig.json" },
		{ "path": "../php-driver/tsconfig.json" },
		{ "path": "../test-utils/tsconfig.json" },
		{ "path": "../ui/tsconfig.json" },
		{ "path": "../e2e-utils/tsconfig.json" }
	]
}

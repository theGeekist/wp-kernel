{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"types": ["node"]
	},
	"include": ["src", "kernel.config.ts"]
}

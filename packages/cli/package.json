{
	"name": "@wpkernel/cli",
	"version": "0.12.0",
	"description": "CLI for scaffolding and managing WPKernel projects",
	"license": "EUPL-1.2",
	"type": "module",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/theGeekist/wp-kernel.git",
		"directory": "packages/cli"
	},
	"homepage": "https://github.com/theGeekist/wp-kernel#readme",
	"bugs": {
		"url": "https://github.com/theGeekist/wp-kernel/issues"
	},
	"keywords": [
		"wordpress",
		"cli",
		"generator",
		"scaffold",
		"wp-kernel"
	],
	"bin": {
		"wpk": "./bin/wpk.js"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./config": {
			"types": "./dist/config/index.d.ts",
			"import": "./dist/config/index.js",
			"default": "./dist/config/index.js"
		},
		"./ir": {
			"types": "./dist/ir/index.d.ts",
			"import": "./dist/ir/index.js",
			"default": "./dist/ir/index.js"
		},
		"./capability-map": {
			"types": "./dist/capability-map.d.ts",
			"import": "./dist/capability-map.js",
			"default": "./dist/capability-map.js"
		},
		"./version": {
			"types": "./dist/version.d.ts",
			"import": "./dist/version.js",
			"default": "./dist/version.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"bin",
		"templates",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "vite build --watch",
		"build": "vite build && node ./scripts/generate-versions.mjs && tsc --noEmit",
		"clean": "rm -rf dist *.tsbuildinfo",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"format": "prettier --write 'src/**/*.{js,ts,tsx,json,md}'",
		"format:check": "prettier --check 'src/**/*.{js,ts,tsx,json,md}'",
		"typecheck": "tsc --noEmit",
		"typecheck:tests": "wpk-run-typecheck-tests tsconfig.tests.typecheck.json tests/tsconfig.json",
		"test": "wpk-run-jest",
		"test:watch": "wpk-run-jest --watch",
		"test:coverage": "wpk-run-jest coverage",
		"test:integration": "wpk-run-jest integration"
	},
	"peerDependencies": {
		"@wpkernel/core": "workspace:*",
		"@wpkernel/php-json-ast": "workspace:*",
		"@wpkernel/pipeline": "workspace:*",
		"@wpkernel/test-utils": "workspace:*",
		"@wpkernel/ui": "workspace:*",
		"@wpkernel/wp-json-ast": "workspace:*"
	},
	"dependencies": {
		"@wpkernel/php-driver": "workspace:*",
		"@wpkernel/php-json-ast": "workspace:*",
		"@wpkernel/wp-json-ast": "workspace:*",
		"@loglayer/transport-simple-pretty-terminal": ">=2.2.9",
		"chokidar": "^4.0.3",
		"clipanion": "4.0.0-rc.4",
		"cosmiconfig": "^9.0.0",
		"loglayer": ">=6.7.2",
		"ts-morph": "^27.0.0",
		"typanion": "^3.14.0",
		"typescript": "^5.0.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/",
		"tag": "beta"
	},
	"devDependencies": {
		"@wpkernel/scripts": "workspace:*",
		"@wpkernel/test-utils": "workspace:*",
		"lodash": "^4.17.21"
	}
}

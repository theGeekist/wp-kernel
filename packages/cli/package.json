{
	"name": "@wpkernel/cli",
	"version": "0.4.0",
	"description": "CLI for scaffolding and managing WP Kernel projects",
	"license": "EUPL-1.2",
	"type": "module",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/theGeekist/wp-kernel.git",
		"directory": "packages/cli"
	},
	"homepage": "https://github.com/theGeekist/wp-kernel#readme",
	"bugs": {
		"url": "https://github.com/theGeekist/wp-kernel/issues"
	},
	"keywords": [
		"wordpress",
		"cli",
		"generator",
		"scaffold",
		"wp-kernel"
	],
	"bin": {
		"wpk": "./bin/wpk.js"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"bin",
		"templates",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "vite build --watch",
		"build": "vite build && tsc --noEmit",
		"clean": "rm -rf dist *.tsbuildinfo",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"format": "prettier --write 'src/**/*.{js,ts,tsx,json,md}'",
		"format:check": "prettier --check 'src/**/*.{js,ts,tsx,json,md}'",
		"typecheck": "tsc --noEmit",
		"typecheck:tests": "tsc --project tsconfig.tests.json --noEmit",
		"test": "jest --passWithNoTests",
		"test:watch": "jest --watch",
		"test:coverage": "jest --passWithNoTests --coverage"
	},
	"peerDependencies": {
		"@wpkernel/core": "workspace:*",
		"@prettier/plugin-php": ">=0.24.0",
		"json-schema-to-typescript": ">=15.0.4",
		"prettier": ">=3.6.0",
		"tsx": ">=4.20.6"
	},
	"dependencies": {
		"chokidar": "^4.0.3",
		"clipanion": "4.0.0-rc.4",
		"cosmiconfig": "^9.0.0",
		"typanion": "^3.14.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"lodash": "^4.17.21"
	}
}

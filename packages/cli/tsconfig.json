{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.lib.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "bundler"
	},
	"include": ["src/**/*", "../../types/**/*.d.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.test-support.ts",
		"**/*.test-support.tsx"
	],
	"references": [
		{
			"path": "../core"
		},
		{
			"path": "../pipeline"
		},
		{
			"path": "../php-driver"
		},
		{
			"path": "../php-json-ast"
		},
		{
			"path": "../wp-json-ast"
		}
	]
}

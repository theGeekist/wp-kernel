{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"composite": true,
		"paths": {
			"@wpkernel/php-json-ast": [
				"./packages/php-json-ast/dist/index.d.ts",
				"./packages/php-json-ast/src/index.ts"
			],
			"@wpkernel/php-json-ast/*": [
				"./packages/php-json-ast/dist/*",
				"./packages/php-json-ast/src/*"
			]
		}
	},
	"include": ["src/**/*", "../../types/**/*.d.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.test-support.ts",
		"**/*.test-support.tsx"
	],
	"references": [{ "path": "../core" }]
}

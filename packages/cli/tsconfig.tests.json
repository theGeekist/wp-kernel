{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "./dist-tests",
		"composite": true,
		"types": ["jest", "node"]
	},
	"include": [
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/next/**/*.test.ts",
		"src/next/**/*.test.tsx",
		"vite.config.ts"
	],
	"exclude": ["dist", "dist-tests", "node_modules"],
	"references": [{ "path": "./tsconfig.json" }, { "path": "../core" }]
}

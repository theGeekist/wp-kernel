{
	"name": "@wpkernel/php-driver",
	"version": "0.1.0",
	"description": "Shared PHP driver utilities for WP Kernel tooling",
	"license": "EUPL-1.2",
	"type": "module",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/theGeekist/wp-kernel.git",
		"directory": "packages/php-driver"
	},
	"homepage": "https://github.com/theGeekist/wp-kernel#readme",
	"bugs": {
		"url": "https://github.com/theGeekist/wp-kernel/issues"
	},
	"keywords": [
		"wordpress",
		"php",
		"cli",
		"driver",
		"wp-kernel"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./installer": {
			"types": "./dist/installer/createPhpDriverInstaller.d.ts",
			"import": "./dist/installer/createPhpDriverInstaller.js",
			"default": "./dist/installer/createPhpDriverInstaller.js"
		},
		"./pretty-printer": {
			"types": "./dist/prettyPrinter/createPhpPrettyPrinter.d.ts",
			"import": "./dist/prettyPrinter/createPhpPrettyPrinter.js",
			"default": "./dist/prettyPrinter/createPhpPrettyPrinter.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"php",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "vite build --watch",
		"build": "vite build && tsc --noEmit",
		"clean": "rm -rf dist dist-tests *.tsbuildinfo",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"format": "prettier --write 'src/**/*.{js,ts,tsx,json,md}'",
		"format:check": "prettier --check 'src/**/*.{js,ts,tsx,json,md}'",
		"typecheck": "tsc --noEmit",
		"typecheck:tests": "tsc --project tsconfig.tests.json --noEmit",
		"test": "jest --passWithNoTests --watchman=false",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --watchman=false"
	},
	"publishConfig": {
		"access": "public"
	},
	"peerDependencies": {
		"@wpkernel/core": "workspace:*",
		"@wpkernel/test-utils": "workspace:*"
	},
	"dependencies": {}
}

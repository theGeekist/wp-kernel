{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.lib.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"paths": {
			"@wpkernel/core": ["./node_modules/@wpkernel/core/dist/index.d.ts"],
			"@wpkernel/core/*": ["./node_modules/@wpkernel/core/dist/*"]
		}
	},
	"include": ["src/**/*", "../../types/**/*.d.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.test-support.ts",
		"**/*.test-support.tsx"
	]
}

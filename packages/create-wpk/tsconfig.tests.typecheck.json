{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.tests.json",
	"compilerOptions": {
		"rootDir": "../..",
		"paths": {
			"@wpkernel/core": [
				"../core/src/index.ts",
				"./node_modules/@wpkernel/core/dist/index.d.ts"
			],
			"@wpkernel/core/*": [
				"../core/src/*",
				"./node_modules/@wpkernel/core/dist/*"
			]
		}
	},
	"include": ["src/**/*.ts", "../../types/**/*.d.ts"],
	"references": [
		{ "path": "./tsconfig.json" },
		{ "path": "../core/tsconfig.json" },
		{ "path": "../cli/tsconfig.json" },
		{ "path": "../test-utils/tsconfig.json" }
	]
}

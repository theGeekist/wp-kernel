{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"baseUrl": "../../",
		"paths": {
			"@wpkernel/core": ["packages/core/src/index.ts"],
			"@wpkernel/core/*": ["packages/core/src/*"],
			"@wpkernel/php-json-ast": ["packages/php-json-ast/src/index.ts"],
			"@wpkernel/php-json-ast/*": ["packages/php-json-ast/src/*"],
			"@wpkernel/php-driver": ["packages/php-driver/src/index.ts"],
			"@wpkernel/php-driver/*": ["packages/php-driver/src/*"],
			"@wpkernel/test-utils": ["packages/test-utils/src/index.ts"],
			"@wpkernel/test-utils/*": ["packages/test-utils/src/*"],
			"@test-utils/*": ["tests/test-utils/*"]
		},
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"allowUnusedLabels": false,
		"allowUnreachableCode": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"types": ["jest", "node"],
		"typeRoots": ["../../node_modules/@types", "../../types"],
		"resolvePackageJsonExports": true,
		"resolvePackageJsonImports": true
	},
	"include": [
		"src/**/__tests__/**/*.ts",
		"src/**/__tests__/**/*.tsx",
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"references": [
		{ "path": "./tsconfig.json" },
		{ "path": "../core/tsconfig.json" },
		{ "path": "../php-driver/tsconfig.json" }
	]
}

{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.lib.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist"
	},
	"include": ["src/**/*", "../../types/**/*.d.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.test-support.ts",
		"**/*.test-support.tsx"
	],
	"references": [
		{ "path": "../core/tsconfig.json" },
		{ "path": "../test-utils/tsconfig.json" },
		{ "path": "../php-driver/tsconfig.json" }
	]
}

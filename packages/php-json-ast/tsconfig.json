{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.lib.json",
	"compilerOptions": {
		"baseUrl": "../..",
		"rootDir": "./src",
		"outDir": "./dist",
		"declarationMap": false,
		"paths": {
			"@wpkernel/core": ["packages/core/dist/index.d.ts"],
			"@wpkernel/core/*": ["packages/core/dist/*"],
			"@wpkernel/pipeline": ["packages/pipeline/dist/index.d.ts"],
			"@wpkernel/pipeline/*": ["packages/pipeline/dist/*"]
		}
	},
	"include": ["src/**/*", "../../types/**/*.d.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.test-support.ts",
		"**/*.test-support.tsx"
	],
	"references": [
		{ "path": "../core/tsconfig.json" },
		{ "path": "../pipeline/tsconfig.json" }
	]
}

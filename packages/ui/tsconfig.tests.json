{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "../../",
		"outDir": "./dist-tests",
		"composite": true,
		"types": ["jest", "node"],
		"jsx": "react-jsx"

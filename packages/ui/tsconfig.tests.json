{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "../../",
		"rootDir": "../../",
		"outDir": "./dist-tests",
		"composite": true,
		"types": ["jest", "node"],
		"jsx": "react-jsx"
	},
	"include": [
		"src/**/*",
		"tests/**/*",
		"../core/tests/**/*",
		"../../tests/**/*",
		"../../packages/test-utils/src/**/*",
		"../../types/**/*.d.ts"
	],
	"exclude": ["node_modules", "dist", "dist-tests", "vendor"],
	"references": [{ "path": "../core" }, { "path": "../cli/tsconfig.json" }]
}

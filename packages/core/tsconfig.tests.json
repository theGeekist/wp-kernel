{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "../../",
		"rootDir": "../../",
		"outDir": "./dist-tests",
		"composite": true,
		"types": ["jest", "node"]
	},
	"include": [
		"src/**/*",
		"tests/**/*",
		"../../tests/**/*",
		"../../packages/test-utils/src/**/*"
	],
	"files": [
		"../../tests/test-utils/wp.test-support.ts",
		"../../tests/test-utils/wp.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"dist-tests",
		"**/dist",
		"**/*.test-support.d.ts"
	]
}

{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.tests.json",
	"compilerOptions": {
		"rootDir": "../../",
		"outDir": "./dist-tests"
	},
	"include": [
		"src/**/*",
		"tests/**/*",
		"../../tests/**/*",
		"../../scripts/register-workspace.ts",
		"../../packages/test-utils/src/**/*",
		"src/pipeline/__tests__"
	],
	"exclude": [
		"node_modules",
		"dist",
		"dist-tests",
		"**/dist",
		"**/*.test-support.d.ts"
	],
	"references": [
		{ "path": "../pipeline/tsconfig.json" },
		{ "path": "../cli/tsconfig.json" }
	]
}

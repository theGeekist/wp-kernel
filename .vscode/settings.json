{
	// Editor
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"editor.tabSize": 2,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,

	// TypeScript
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.preferences.importModuleSpecifier": "relative",
	"typescript.updateImportsOnFileMove.enabled": "always",

	// Files
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/node_modules": true,
		"**/*.tsbuildinfo": true
	},
	"files.watcherExclude": {
		"**/node_modules/**": true,
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/dist/**": true,
		"**/build/**": true,
		"**/.wp-env/**": true
	},

	// Search
	"search.exclude": {
		"**/node_modules": true,
		"**/dist": true,
		"**/build": true,
		"**/.wp-env": true,
		"**/pnpm-lock.yaml": true,
		"**/*.tsbuildinfo": true
	},

	// ESLint
	"eslint.enable": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],

	// NPM Scripts
	"npm.packageManager": "pnpm",
	"npm.exclude": "**/test-harness/**",

	// Extensions
	"prettier.requireConfig": true,
	"prettier.useEditorConfig": false,

	// Terminal
	"terminal.integrated.env.osx": {
		"NODE_OPTIONS": "--max-old-space-size=4096"
	},
	"terminal.integrated.cwd": "${workspaceFolder}",

	// PHP (for WordPress files)
	"[php]": {
		"editor.defaultFormatter": null,
		"editor.formatOnSave": false
	},

	// Intelephense (PHP IntelliSense)
	"intelephense.stubs": [
		"apache",
		"bcmath",
		"bz2",
		"calendar",
		"Core",
		"ctype",
		"curl",
		"date",
		"dom",
		"exif",
		"fileinfo",
		"filter",
		"ftp",
		"gd",
		"gettext",
		"hash",
		"iconv",
		"intl",
		"json",
		"libxml",
		"mbstring",
		"mysqli",
		"openssl",
		"pcre",
		"PDO",
		"pgsql",
		"Phar",
		"posix",
		"Reflection",
		"session",
		"SimpleXML",
		"soap",
		"sockets",
		"sodium",
		"SPL",
		"sqlite3",
		"standard",
		"superglobals",
		"tokenizer",
		"xml",
		"xmlreader",
		"xmlwriter",
		"Zend OPcache",
		"zip",
		"zlib",
		"wordpress"
	],
	"intelephense.environment.includePaths": [
		"${workspaceFolder}/examples/showcase/vendor/php-stubs/wordpress-stubs",
		"${workspaceFolder}/examples/showcase/vendor/php-stubs/wp-cli-stubs"
	],

	// JSON
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}

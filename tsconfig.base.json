{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		// Language & Environment
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"jsxImportSource": "@wordpress/element",

		// Module Resolution
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,

		// Path Aliases
		"baseUrl": ".",
		"paths": {
			"@wpkernel/core": ["./packages/core/src/index.ts"],
			"@wpkernel/core/*": ["./packages/core/src/*"],
			"@wpkernel/ui": ["./packages/ui/src/index.ts"],
			"@wpkernel/ui/*": ["./packages/ui/src/*"],
			"@wpkernel/cli": ["./packages/cli/src/index.ts"],
			"@wpkernel/cli/*": ["./packages/cli/src/*"],
			"@wpkernel/e2e-utils": ["./packages/e2e-utils/src/index.ts"],
			"@wpkernel/e2e-utils/*": ["./packages/e2e-utils/src/*"],
			"@wpkernel/test-utils": ["./packages/test-utils/src/index.ts"],
			"@wpkernel/test-utils/*": ["./packages/test-utils/src/*"],
			"@test-utils/*": ["./tests/test-utils/*"]
		},

		// Type Checking (Strict Mode)
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"allowUnusedLabels": false,
		"allowUnreachableCode": false,

		// Emit
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmit": false,
		"outDir": "./dist",

		// Interop Constraints
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,

		// Completeness
		"skipLibCheck": true,

		// Project References
		"composite": true,
		"incremental": true,

		// Global Types
		"types": ["node"],
		"typeRoots": ["./node_modules/@types", "./types"]
	},
	"include": ["types/**/*.d.ts"],
	"exclude": [
		"**/node_modules",
		"**/dist",
		"**/build",
		"**/.wp-env",
		"**/coverage",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx"
	]
}

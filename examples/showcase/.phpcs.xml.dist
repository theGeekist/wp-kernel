<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="WP Kernel Showcase Plugin" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">
	<description>PHP CodeSniffer configuration for WP Kernel Showcase Plugin</description>

	<!-- Only check PHP files -->
	<arg name="extensions" value="php"/>

	<!-- Show progress -->
	<arg value="ps"/>

	<!-- Strip the filepaths down to the relevant bit -->
	<arg name="basepath" value="./"/>

	<!-- Check all files in this directory and the subdirectories -->
	<file>.</file>

	<!-- Exclude build and vendor directories -->
	<exclude-pattern>*/build/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>

	<!-- WordPress Coding Standards -->
	<rule ref="WordPress-Core">
		<!-- Allow short array syntax -->
		<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
		<exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
	</rule>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="wp-kernel-showcase"/>
			</property>
		</properties>
	</rule>
</ruleset>

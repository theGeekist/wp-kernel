{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "../../",
		"rootDir": "../../",
		"outDir": "./dist-tests",
		"composite": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"types": ["jest", "node"],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false
	},
	"include": [
		"**/*",
		"package.json",
		"../../tests/**/*",
		"../../packages/test-utils/src/**/*"
	],
	"exclude": ["node_modules", "dist", "dist-tests", "build"],
	"references": [
		{ "path": "../../packages/core" },
		{ "path": "../../packages/ui" },
		{ "path": "../../packages/e2e-utils" }
	]
}

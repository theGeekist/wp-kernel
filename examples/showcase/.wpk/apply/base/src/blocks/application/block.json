{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "acme-jobs/application",
	"title": "Application",
	"description": "Application block generated from project config",
	"category": "widgets",
	"icon": "database",
	"textdomain": "acme-jobs",
	"keywords": ["application"],
	"supports": {
		"align": ["wide", "full"],
		"color": {
			"background": true,
			"text": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		}
	},
	"editorScriptModule": "file:./index.tsx",
	"viewScriptModule": "file:./view.ts",
	"attributes": {
		"uuid": {
			"type": "string"
		},
		"candidate_name": {
			"type": "string"
		},
		"candidate_email": {
			"type": "string"
		},
		"job_id": {
			"type": "integer"
		},
		"status": {
			"type": "string",
			"enum": [
				"new",
				"screening",
				"interview",
				"offer",
				"hired",
				"rejected"
			]
		},
		"resume_url": {
			"type": "string"
		},
		"created_at": {
			"type": "string"
		},
		"updated_at": {
			"type": "string"
		}
	}
}
